{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["./src/tests"],
  "testMatch": ["**/tests/**/*.test.ts"],
  "setupFilesAfterEnv": ["./jest.setup.ts"],
  "testTimeout": 30000,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/tests/**",
    "!**commentController**",
    "!**postController**",
    "!**commentModel**",
    "!**postModel**",
    "!**commentRoutes**",
    "!**postRoutes**"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "statements": 70,
      "branches": 70,
      "functions": 70,
      "lines": 70
    }
  }
}
